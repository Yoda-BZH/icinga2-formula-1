{%- set libdir = 'lib64' if salt['grains.get']('cpuarch') == 'x86_64' else 'lib' %}

{%- set icinga2_os_settings = salt['grains.filter_by']({
  'Debian': {
    'user':    'nagios',
    'group':   'nagios',
    'lib_dir': '/usr/lib',
    'web': {
      'user': 'www-data',
      'group': 'icingaweb2'
    }
  },

  'RedHat': {
    'user':                 'icinga',
    'group':                'icinga',
    'lib_dir':              '/usr/{{ libdir }}',
    'constants': {
      'PluginDir':          '/usr/{{ libdir }}/nagios/plugins',
